{
  "AllowedHosts": "*",
  "Kestrel": {
    "DefaultHttpsPort": 7001,
    "Endpoints": {
      "Http": {
        "Url": "http://*:7000",
        "Protocols": "Http1AndHttp2",
        "Scheme": "http"
      },
      "HttpsDefaultCert": {
        "Url": "https://*:7001",
        "Protocols": "Http1AndHttp2",
        "Scheme": "https"
      }
    },
    "Certificates": {
      "Default": {
        "Path": "orange.pfx",
        "Password": "1234567890"
      }
    }
  },
  "CacheDataType": "Memory",
  "MemoryCacheOptions": {
    "SizeLimit": 268435456
  },
  "ConnectionStrings": {
    "DefaultConnection": "mongodb://localhost:27017/?keepAlive=true&minPoolSize=5&maxPoolSize=300&autoReconnect=true&socketTimeoutMS=3600&connectTimeoutMS=3600&compressors=zstd",
    "RequiredVersion": "1",
    "DataBase": "airports"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{Level:u3}] {GC} {RequestId}{RequestPath} {SourceContext} {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Jaeger": {
    "JAEGER_SERVICE_NAME": "AirportInfo",
    "JAEGER_AGENT_HOST": "jaeger",
    "JAEGER_AGENT_PORT": "6831",
    "JAEGER_SAMPLER_TYPE": "const",
    "JAEGER_SAMPLER_PARAM": "1"
  }
}
