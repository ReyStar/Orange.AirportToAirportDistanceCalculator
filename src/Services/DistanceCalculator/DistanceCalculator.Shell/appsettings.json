{
  "AllowedHosts": "*",
  "Kestrel": {
    "DefaultHttpsPort": 5001,
    "Endpoints": {
      "Http": {
        "Url": "http://*:5000",
        "Protocols": "Http1AndHttp2",
        "Scheme": "http"
      },
      "HttpsDefaultCert": {
        "Url": "https://*:5001",
        "Protocols": "Http1AndHttp2",
        "Scheme": "https"
      }
    },

    "Certificates": {
      "Default": {
        "Path": "orange.pfx",
        "Password": "1234567890"
      }
    }

  },
  "CacheDataType": "Memory,DataBase",
  "GeoCalculationAlgorithmType": "Haversine",

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=AirportsDistanceDB.db",
    "RequiredVersion": 1
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff}][{Level:u3}] {GC} {RequestId}{RequestPath} {SourceContext} {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Jaeger": {
    "JAEGER_SERVICE_NAME": "DistanceCalculator",
    "JAEGER_AGENT_HOST": "jaeger",
    "JAEGER_AGENT_PORT": "6831",
    "JAEGER_SAMPLER_TYPE": "const",
    "JAEGER_SAMPLER_PARAM": "1"
  },
  "AirportInfoClientConfig": {
    "BaseAddress": "https://localhost:7001",
    "Timeout": "00:00:30",
    "HandlerLifetime": "00:01:00",
    "RetryCount": 3,
    "RetryTimeout": "00:00:01",
    "CircuitBreakerFailTryCount": 5,
    "CircuitTimeout": "00:00:08"
  },
  "MemoryCacheOptions": {
    "SizeLimit": 268435456
  }
}
